<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323">


    <ImageButton
        android:id="@+id/btn_vip"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/remote_b_vip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sourcesanspro_regular"
        android:text="No Device"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_on_off"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/remote_b_on_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_device_name" />

    <LinearLayout
        android:id="@+id/lin_top_action"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_on_off"
        app:layout_constraintWidth_percent="0.6">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_placeholder_btn"
            android:scaleType="centerInside"
            android:src="@drawable/remote_b_back" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_placeholder_btn"
            android:scaleType="centerInside"
            android:src="@drawable/remote_b_home" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/lin_bottom_action_1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lin_top_action"
        app:layout_constraintHeight_percent="0.45"
        app:srcCompat="@drawable/remote_b_pad" />

    <LinearLayout
        android:id="@+id/lin_bottom_action_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/lin_bottom_action_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.6">

        <ImageButton
            android:id="@+id/btn_voldown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_placeholder_btn"
            android:scaleType="centerInside"
            android:src="@drawable/remote_b_volume_down" />

        <ImageButton
            android:id="@+id/btn_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/back_placeholder_btn"
            android:scaleType="centerInside"
            android:src="@drawable/remote_b_mute" />

        <ImageButton
            android:id="@+id/btn_volup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_placeholder_btn"
            android:scaleType="centerInside"
            android:src="@drawable/remote_b_volume_up" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_bottom_action_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/lin_bottom_action_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.6">

        <ImageButton
            android:id="@+id/btn_backward"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/back_placeholder_btn"
            android:scaleType="centerInside"
            android:src="@drawable/remote_b_backward" />

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_placeholder_btn"
            android:scaleType="centerInside"
            android:src="@drawable/remote_b_play_paused" />

        <ImageButton
            android:id="@+id/btn_forward"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/back_placeholder_btn"
            android:scaleType="centerInside"
            android:src="@drawable/remote_b_forward" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_bottom_action_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.6">

        <ImageButton
            android:id="@+id/btn_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_placeholder_btn"
            android:scaleType="centerInside"
            android:layout_marginEnd="2.5dp"
            android:layout_marginRight="2.5dp"
            android:src="@drawable/remote_b_refresh" />

        <ImageButton
            android:id="@+id/btn_star"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2.5dp"
            android:layout_marginStart="2.5dp"
            android:background="@drawable/back_placeholder_btn"
            android:scaleType="centerInside"
            android:src="@drawable/remote_b_star" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_ok"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/back_placeholder_btn_pad_ok"
        android:scaleType="centerInside"
        android:src="@drawable/remote_b_pad_ok"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintWidth_percent="0.14"
        app:layout_constraintDimensionRatio="1:1" />

    <ImageButton
        android:id="@+id/btn_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/back_placeholder_btn_pad_left"
        android:scaleType="centerInside"
        android:src="@drawable/remote_b_pad_01"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/btn_ok"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintWidth_percent="0.17" />

    <ImageButton
        android:id="@+id/btn_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/back_placeholder_btn_pad_right"
        android:scaleType="centerInside"
        android:src="@drawable/remote_b_pad_03"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/btn_ok"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintWidth_percent="0.17" />

    <ImageButton
        android:id="@+id/btn_up"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/back_placeholder_btn_pad_up"
        android:scaleType="centerInside"
        android:src="@drawable/remote_b_pad_02"
        app:layout_constraintBottom_toTopOf="@+id/btn_ok"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintWidth_percent="0.17"
        app:layout_constraintHeight_percent="0.1"
        android:layout_marginBottom="20dp"/>

    <ImageButton
        android:id="@+id/btn_down"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/back_placeholder_btn_pad_up"
        android:scaleType="centerInside"
        android:src="@drawable/remote_b_pad_04"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/btn_ok"
        app:layout_constraintWidth_percent="0.17"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>