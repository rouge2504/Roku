<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context="com.labs206.rokuremote.com.sensustech.rokuremote.KeyboardActivity">

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="@drawable/b_close_02"
        android:layout_alignParentRight="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/back_swipe_view_gray">

        <ImageButton
            android:id="@+id/btn_send"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/b_send"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />

        <EditText
            android:id="@+id/et_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/btn_send"
            android:background="@android:color/transparent"
            android:fontFamily="@font/sourcesanspro_regular"
            android:gravity="center_vertical"
            android:hint="Type the text"
            android:inputType="textCapSentences"
            android:textColor="@android:color/white"
            android:textColorHint="#80ffffff"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/btn_send" />

    </RelativeLayout>

</RelativeLayout>